@model List<CarDetail>

<div class="right_col" role="main">

    <div class="col-md-12 col-sm-12 col-xs-12">
        @if (TempData["errorMessage"] != null)
        {
            <div class="alert alert-danger" role="alert">
                @TempData["errorMessage"]
            </div>
        }
        <div class="x_panel">
            <div class="x_title">
                <h2>Araç Ekleme Sistemi</h2>
                <a class="btn btn-success navbar-right" asp-controller="CarDetail" asp-action="New">Yeni Araç</a>
                <div class="clearfix"></div>
            </div>

            <div class="x_content">


                <div class="table-responsive">
                    <table class="table table-striped jambo_table bulk_action">
                        <thead>
                            <tr class="headings">

                                <th class="column-title">Araç Markası </th>
                                <th class="column-title">Araç modeli </th>
                                <th class="column-title">Araç Km </th>
                                <th class="column-title">Aracın Yılı </th>
                                <th class="column-title">Aracın Fiyatı </th>
                                <th class="column-title">Açıklama</th>
                                <th class="column-title">Görünürlük Sırası </th>
                                <th class="column-title">Araç Resimleri</th>
                                <th class="column-title">İşlemler</th>
                            </tr>
                        </thead>

                        <tbody>
                            @foreach (CarDetail m in Model)
                            {
                                <tr class="even pointer">
                                    <td>@m.CarBrand.Name</td>
                                    <td>@m.CarBrand.ParentBrand?.Name </td>
                                    <td>@m.CarKilometer</td>
                                    <td>@m.CarYear</td>
                                    <td>@m.DailyPrice.ToString("C")</td>
                                    <td>@m.Description</td>
                                    <td>@m.DisplayIndex</td>
                                   

                                        @if (m.Images.Any())
                                        {
                                        <td style="color:red;">
                                            <a> Ürüne ait resimler</a>
                                        </td>
                                    }
                                    else
                                    {
                                        <td style="color:blue;">
                                            Ürüne ait resim yok
                                        </td>
                                    }
                                        
                                        <td>
                                            <a class="btn btn-info" asp-controller="CarDetail" asp-action="Edit" asp-route-id="@m.Id">Düzenle</a>
                                            <a class="btn btn-danger" asp-controller="CarDetail" asp-action="Delete" asp-route-id="@m.Id">Sil</a>
                                        </td>


                                    </tr>
                             }



                        </tbody>
                    </table>
                </div>


            </div>
        </div>
    </div>

</div>
