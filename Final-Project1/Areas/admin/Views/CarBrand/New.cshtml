@model BrandVM

<div class="right_col" role="main">


    <div class="">

        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Yeni Marka Ekle </h2>

                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <br />
                        <form enctype="multipart/form-data" class="form-horizontal form-label-left" asp-controller="CarBrand" asp-action="New" method="post">
                            @Html.AntiForgeryToken()


                            <div class="form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-12" asp-for="@Model.CarBrand.Name">Marka Adı</label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <input class="form-control" asp-for="@Model.CarBrand.Name" />
                                    <span asp-validation-for="@Model.CarBrand.Name" class="text-danger"></span>
                                </div>
                            </div>


                            <div class="form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-12" asp-for="@Model.CarBrand.ParentId">Araç Marka Adı</label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <select class="form-control" asp-for="@Model.CarBrand.ParentId" asp-items="Model.Brands.Select(x => new SelectListItem { Text = x.Name, Value = x.Id.ToString() })">
                                        <option value="">Araçın Markasını Seçin</option>
                                    </select>
                                    <span asp-validation-for="@Model.CarBrand.ParentId" class="text-danger"></span>
                                </div>
                            </div>


                            <div class="form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-12" asp-for="Pictures">Araç Resmi Seçin</label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <input name="Pictures" type="file" class="form-control" data-val="false" />

                                </div>
                            </div>


                            <div class="ln_solid"></div>
                            <div class="form-group">
                                <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                                    <a class="btn btn-primary" asp-controller="CarBrand" asp-action="Index">İptal</a>
                                    <button type="reset" class="btn btn-primary">Reset</button>
                                    <button type="submit" class="btn btn-success">Ekle</button>
                                </div>
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
